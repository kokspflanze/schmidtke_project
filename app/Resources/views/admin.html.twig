<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">

	<!-- Always force latest IE rendering engine or request Chrome Frame -->
	<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">

	<!-- Use title if it's in the page YAML frontmatter -->
	<title>Core Adminpanel</title>

	<link href="{{ asset('bundles/adminmain/stylesheets/application.css') }}" media="screen" rel="stylesheet"
		  type="text/css"/>

	<script src="{{ asset('bundles/adminmain/javascripts/application.js') }}" type="text/javascript"></script>
</head>


<body>
<nav class="navbar navbar-default navbar-inverse navbar-static-top" role="navigation">
	<!-- Brand and toggle get grouped for better mobile display -->
	<div class="navbar-header">
		<a class="navbar-brand" href="#">Core Admin</a>
	</div>
	<!-- /.navbar-collapse -->
</nav>
<div class="sidebar-background">
	<div class="primary-sidebar-background"></div>
</div>
<div class="primary-sidebar">
	<!-- Main nav -->
	<ul class="nav navbar-collapse collapse navbar-collapse-primary">
		<li class="{{ isActive('admin\\main', 'default') }}">
			<span class="glow"></span>
			<a href="{{ path('admin_main') }}">
				<i class="icon-dashboard icon-2x"></i>
				<span>Dashboard</span>
			</a>
		</li>
		<li class="{{ isActive('admin\\main', 'user') }}">
			<span class="glow"></span>
			<a href="{{ path('admin_user') }}">
				<i class="icon-user icon-2x"></i>
				<span>User</span>
			</a>
		</li>
		<li class="dark-nav {{ isActive('admin\\main', 'ticketsystem') }}">
			<span class="glow"></span>
			<a class="accordion-toggle collapsed " data-toggle="collapse" href="#yJ6h3Npe7C">
				<i class="icon-comments-alt icon-2x"></i>
                    <span>
                      TicketSystem
                      <i class="icon-caret-down"></i>
                    </span>
			</a>
			<ul id="yJ6h3Npe7C" class="collapse {{ isActive('admin\\main', 'ticketsystem')=='active'?'in':'' }}">
				<li class="{{ isActive('admin\\main', 'ticketsystem', 'index') }}">
					<a href="{{ path('admin_ticketsystem') }}">
						<i class="icon-edit"></i> new
					</a>
				</li>
				<li class="{{ isActive('admin\\main', 'ticketsystem','viewOpen') }}">
					<a href="{{ path('admin_ticketsystem_view_open') }}">
						<i class="icon-table"></i> Open
					</a>
				</li>
				<li class="{{ isActive('admin\\main', 'ticketsystem','viewClose') }}">
					<a href="{{ path('admin_ticketsystem_view_close') }}">
						<i class="icon-list-ol"></i> Closed
					</a>
				</li>
			</ul>
		</li>
	</ul>
</div>
<div class="main-content">
	{% block body %}{% endblock %}
</div>
</body>
</html>
