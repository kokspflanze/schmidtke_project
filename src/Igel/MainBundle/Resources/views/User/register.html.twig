{% extends "::base.html.twig" %}

{% block title %}Registration{% endblock %}

{% block body %}

<div class="col-md-6 col-md-offset-3 border">
	<form action="" method="post" class="reg-page" role="register">
		<div class="reg-header">
			<h2>Registration</h2>
		</div>
			{{ form_errors(form._token) }}
			<div id="username" class="form-group {{ form_errors(form.username) is not empty?'has-error':'' }}">
				<label class="control-label" for="usernameInput">Username <span class="color-red">*</span></label>
				{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
				<div class="help-block">{{ form_errors(form.username) }}</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div id="password" class="col-sm-6 {{ form_errors(form.password.first) is not empty?'has-error':'' }}">
						<label class="control-label" for="passwordInput">Password <span class="color-red">*</span></label>
						{{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
						<div class="help-block">{{ form_errors(form.password.first) }}</div>
					</div>
					<div id="password2" class="col-sm-6 {{ form_errors(form.password.second) is not empty?'has-error':'' }}">
						<label class="control-label" for="password2Input">Confirm Password <span class="color-red">*</span></label>
						{{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
						<div class="help-block">{{ form_errors(form.password.second) }}</div>
					</div>
				</div>
			</div>
			{{ form_widget(form.captcha) }}
			{{ form_row(form._token) }}
		<div class="controls form-inline margin-top10">
				<button class="btn btn-primary pull-right" type="submit">Register</button>
				<div class="clearfix"></div>
			</div>
		{#
			If you want to control the URL the user
			is redirected to on success (more details below)
			<input type="hidden" name="_target_path" value="/account" />
		#}
	</form>
</div>

{% endblock %}
