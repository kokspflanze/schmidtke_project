{% extends "::admin.html.twig" %}

{% block title %}User{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="area-top clearfix">
				<div class="pull-left header">
					<h3 class="title">
						<i class="icon-user"></i>
						User
					</h3>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<div class="box">
						<div class="box-header">
							<span class="title">Search</span>
						</div>
						<div class="box-content">
							<form class="form-horizontal fill-up validatable" method="post">
								<div class="padded">
									<div class="form-group">
										<label class="control-label col-xs-1">Username</label>
										<div class="col-xs-11">
											<input type="text" name="username" data-prompt-position="topLeft">
										</div>
									</div>
								</div>
								<div class="form-actions">
									<button class="btn btn-blue" type="submit">Search</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			{% if aUser %}
			<div class="row">
				<div class="col-md-12">
					<div class="box">
						<div class="box-header">
							<span class="title">Result</span>
						</div>
						<div class="box-content">
							<table class="table table-striped table-bordered  table-hover table-condensed">
								<thead>
								<tr>
									<th>#</th>
									<th>User</th>
								</tr>
								</thead>
								{% for iKey, oCurUser in aUser %}
									<tr>
										<td><a class="btn btn-primary btn-xs" href="{{ path('admin_user_detail', {'userid':oCurUser.getId}) }}">{{ oCurUser.getId }}</a></td>
										<td>{{ oCurUser.getUsername }}</td>
									</tr>
								{% endfor %}
							</table>
						</div>
					</div>
				</div>
			</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
