{% extends "::admin.html.twig" %}

{% block title %}User-Detail{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="area-top clearfix">
				<div class="pull-left header">
					<h3 class="title">
						<i class="icon-user"></i>
						User-Detail
					</h3>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-sm-6">
					<div class="box">
						<div class="box-header">
							<span class="title">Details</span>
						</div>
						<div class="box-content">
							<table class="table table-striped table-bordered  table-hover table-condensed">
								<tr>
									<td>UserId:</td>
									<td>{{ oUser.getId() }}</td>
								</tr>
								<tr>
									<td>Username:</td>
									<td>{{ oUser.getUsername() }}</td>
								</tr>
								<tr>
									<td>Created:</td>
									<td>{{ oUser.getCreated()|date('d.m.Y H:i') }}</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="box">
						<div class="box-header">
							<span class="title">Roles</span>
						</div>
						<div class="box-content padded">
							<table class="table table-striped table-bordered  table-hover table-condensed">
								{% for iKey, oCurRole in oUser.getUserRoles %}
									<tr>
										<td>{{ oCurRole.getName() }} [{{ oCurRole.getId() }}]</td>
										{#<td><button data-role="{{ oCurRole.getId() }}" class="btn btn-danger btn-xs"><i class="icon icon-trash"></i> Delete</button></td>#}
									</tr>
								{% endfor %}
							</table>
							{#
							<form method="post" class="fill-up">
								<label for="idSelectRole" class="control-label">Role</label>
								<select name="roles" class="uniform" id="idSelectRole">
									{% for iKey, oCurRole in aRoles %}
										<option value="{{ oCurRole.getId() }}">{{ oCurRole.getName() }} [{{ oCurRole.getId() }}]</option>
									{% endfor %}
								</select>
								<button class="btn btn-primary btn-xs"><i class="icon icon-plus"></i> add Role</button>
							</form>#}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
