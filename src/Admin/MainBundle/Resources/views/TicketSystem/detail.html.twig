{% extends "::admin.html.twig" %}

{% block title %}Ticketsystem - {{ oTicketSubject.getName }}{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="area-top clearfix">
				<div class="pull-left header">
					<h3 class="title">
						<i class="icon-comments-alt"></i>
						Ticketsystem - {{ oTicketSubject.getName }}
					</h3>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<div class="box">
						<div class="box-header">
							<span class="title">Entry</span>
						</div>
						<div class="box-content">
							<div class="padded">
								<form method="post">
									<div class="form-group">
										<label for="idMemo" class="control-label">Memo</label>
										<textarea name="memo" class="form-control" id="idMemo"></textarea>
									</div>
									<button type="submit" class="col-xs-12 pull-right btn btn-primary">Submit</button>
									<div class="clearfix"></div>
								</form>
								<hr />
								<section>
									{% for iKey, oCurEntry in aTicketEntry %}
										<div>
											<h4>{{ oCurEntry.getUser.getUsername }} @ {{ oCurEntry.getCreated|date('d.m.Y H:i') }}</h4>
											{{ oCurEntry.getMemo }}<br />
											<hr />
										</div>
									{% endfor %}
								</section>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
