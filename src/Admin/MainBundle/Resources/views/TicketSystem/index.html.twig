{% extends "::admin.html.twig" %}

{% block title %}Ticketsystem{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="area-top clearfix">
				<div class="pull-left header">
					<h3 class="title">
						<i class="icon-comments-alt"></i>
						Ticketsystem
					</h3>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<div class="box">
						<div class="box-header">
							<span class="title">New Tickets</span>
						</div>
						<div class="box-content">
							<table class="table table-striped table-bordered  table-hover table-condensed">
								<tr>
									<th>Author</th>
									<th>Title</th>
									<th>Memo</th>
									<th>Created</th>
								</tr>
								{% for iKey, oCurTicket in aTicket %}
									<tr>
										<td><a href="{{ path('admin_ticketsystem_detail', {'ticketid' : oCurTicket.getId}) }}">{{ oCurTicket.getUser.getUsername }}</a></td>
										<td>{{ oCurTicket.getName }}</td>
										<td>{{ oCurTicket.getName }}</td>
										<td>{{ oCurTicket.getCreated|date('d.m.Y H:i') }}</td>
									</tr>
								{% endfor %}
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
